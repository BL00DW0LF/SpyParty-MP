<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ActivityMain">


    <!-- Dummy item to prevent first EditText from receiving focus and popping up keyboard-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout_focus"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"
        android:orientation="vertical"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editPlayer1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:hint="You"
        android:textSize="23sp"
        android:enabled="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editPlayer2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:singleLine="true"
        android:hint="Opponent"
        android:textSize="23sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Spy"
        android:id="@+id/buttonSpy"
        android:layout_below="@+id/editPlayer1"
        android:layout_centerHorizontal="true"
        android:onClick="changeFirstSpy"
        android:gravity="center_vertical|center_horizontal" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerMyPoints"
        android:layout_below="@+id/buttonSpy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerYourPoints"
        android:layout_below="@+id/buttonSpy"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score Round"
        android:id="@+id/buttonScore"
        android:layout_alignBottom="@+id/spinnerMyPoints"
        android:layout_centerHorizontal="true"
        android:onClick="scoreRound" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/buttonScore"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/textScore" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score"
        android:id="@+id/textScore"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <!--
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Spy"
        android:id="@+id/radioSpy1"
        android:layout_below="@+id/textPlayer1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="true"
        android:button="@null"
        android:drawableLeft="@android:drawable/btn_radio"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Spy"
        android:id="@+id/radioSpy2"
        android:layout_below="@+id/textPlayer2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:button="@null"
        android:drawableRight="@android:drawable/btn_radio"/>-->


</RelativeLayout>
